  <%- include('header'); -%>

  <main class="w-75 mx-auto">
    <hr>
    <h2 class="display-6 mb-3">Demandas Recursos Internos </h2>
    

    <table class="table table-striped table-hover" >
        <tr> 
            <td>
                <strong> Recurso </strong> 
            </td>
            <td style="text-align: center;">
                <strong>  Demanda </strong>
            </td>
            <td style="text-align: center;">
                <strong>  Atendidos / MÃªs </strong>
            </td>
        </tr>
        
        <% for(var i=0; i < demandasRecursosInternos.length; i++) {%>

            <tr id="<%= demandasRecursosInternos[i]._id %>" class="botao" style="cursor: pointer">

                <td> <%= demandasRecursosInternos[i].recurso %>  </td>
            
                <td style="text-align: center;"> <%= demandasRecursosInternos[i].demanda %> </td> 

                <td style="text-align: center;"> <%= demandasRecursosInternos[i].atendidos %> </td> 
            </tr>
        <% } %>
            
            <tr> 
              <td> <b> Total: </b> </td>
              <td style="text-align: center;"> <b> <%= somaPacientesDemanda %> </b></td>
              <td style="text-align: center;"> <b> <%= somaPacientesAtendidos %> </b> </td>
            </tr>
    </table>
  </main>
  
  <!-- Modal para abrir detalhes da especialidade -->
<div class="modal fade" id="ModalDetalhes" tabindex="-1" aria-labelledby="ModalDetalhesLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title fs-5" id="ModalDetalhesLabel" style="color:rgb(62, 75, 175)">  </h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div id="modal-body" class="modal-body">
            <div id="modal-mensagem-erro" class="alert alert-danger" role="alert"> </div>
            <div id="modal-mensagem-sucesso" class="alert alert-success" role="alert"> </div>
            <div id="modal-conteudo"> </div>
        </div>
        <div class="modal-footer">
          <button id="button-close-modal" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
          
        </div>
      </div>
    </div>
    </div>
 
    <script src="/demandas-recursos-internos.js" type="module"></script>
  
  <%- include('footer'); -%>
